<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Edit Account Info">

        <EditTextPreference
            app:key="name"
            app:title="Edit User Name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="email"
            app:title="Edit Email"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="male"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="gender"
            app:title="Edit Gender"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="pass"
            app:title="Edit Password"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="phone"
            app:title="Edit Phone Number"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="dob"
            app:title="Edit Date Of Birth"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>



</PreferenceScreen>
